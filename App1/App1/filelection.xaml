<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.filelection">
    <ContentPage.Content>
        <Grid>
            <StackLayout Orientation="Vertical">
                <StackLayout>
                    <Label Text="Создать" FontSize="20" TextColor="Gray" FontAttributes="Bold" Margin="20,20,0,0"/>
                    <Label Text="Выберите тип контента" FontSize="15" TextColor="Gray" Margin="20,10,0,0"/>
                </StackLayout>

                <StackLayout>
                    <Button x:Name="btn5" Text="Сделать ФОТО"  TextColor="White" FontSize="20" FontAttributes="Bold"
                        BackgroundColor="RoyalBlue" HeightRequest="170" Margin="20,200,20,20" CornerRadius="20" Clicked="btn5_Clicked"/>
                </StackLayout>

                <StackLayout>
                    <Button x:Name="btn4" Text="Зазгрузить из ГАЛЛЕРЕИ" TextColor="White" FontSize="20" FontAttributes="Bold" 
                        BackgroundColor="OrangeRed" HeightRequest="170" Margin="20,30,20,50" CornerRadius="20" Clicked="btn4_Clicked"/>

                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>